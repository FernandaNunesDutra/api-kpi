<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppKpi.App">
    <Application.Resources>
        <ResourceDictionary>
            <OnIdiom x:Key="SmallSpacing" x:TypeArguments="Thickness" Tablet="10,10,10,10" Phone="10,10,10,10"/>
            <OnIdiom x:Key="DefaultCornerRadius" x:TypeArguments="x:Single" Tablet="5" Phone="5"/>
            <Style TargetType="Frame" x:Key="RoundFrame">
                <Setter Property="CornerRadius" Value="{StaticResource DefaultCornerRadius}" />
                <Setter Property="Padding" Value="{StaticResource SmallSpacing}" />
                <Setter Property="VerticalOptions" Value="Fill" />
                <Setter Property="HorizontalOptions" Value="FillAndExpand" />
                <Setter Property="HasShadow" Value="False"/>
            </Style>
            <Style TargetType="BoxView" x:Key="HorizontalLineBoxView">
                <Setter Property="HorizontalOptions" Value="FillAndExpand" />
                <Setter Property="HeightRequest" Value="1"/>
                <Setter Property="Color" Value="Gray"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>